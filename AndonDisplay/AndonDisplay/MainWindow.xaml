<Window x:Class="AndonDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workstation Andon Display" Height="768" Width="1024"
        Background="#F3F4F6" FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E293B" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="STATION ID:" Foreground="LightGray" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtStationId" Text="1" Width="50" Height="25" TextAlignment="Center" VerticalContentAlignment="Center"/>
                    <Button x:Name="btnLoad" Content="LOAD" Click="BtnLoad_Click" Width="80" Height="25" Margin="10,0,0,0" 
                            Background="#3B82F6" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock x:Name="txtStationTitle" Text="STATION 1" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock x:Name="txtProduced" Text="PRODUCED: 0" Foreground="LightGray" Margin="0,0,20,0" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtInProgress" Text="ASSEMBLING: 0" Foreground="#3B82F6" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Top">
                    <TextBlock x:Name="txtConnection" Text="● CONNECTED" Foreground="#2ECC71" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <ItemsControl x:Name="BinList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" Width="300" Height="220" Margin="15" CornerRadius="5">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{Binding PartName}" FontSize="16" FontWeight="Bold" Foreground="#64748B" Margin="15,15,0,0"/>
                                <Border Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0"
                                        Background="{Binding StatusColor}" CornerRadius="3" Padding="8,4">
                                    <TextBlock Text="{Binding StatusText}" Foreground="White" FontWeight="Bold" FontSize="10"/>
                                </Border>

                                <Viewbox Grid.Row="1" Margin="10">
                                    <TextBlock Text="{Binding CurrentQuantity}" FontWeight="Bold" Foreground="{Binding TextColor}"/>
                                </Viewbox>

                                <TextBlock Grid.Row="2" Text="{Binding CapacityText}" HorizontalAlignment="Center" Foreground="Gray" Margin="0,0,0,15" FontWeight="Bold"/>

                                <ProgressBar Grid.Row="3" Height="8" Value="{Binding FillPercentage, Mode=OneWay}" Maximum="100" BorderThickness="0" Background="#E5E7EB" Foreground="{Binding StatusColor}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>