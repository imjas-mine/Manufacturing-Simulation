<Window x:Class="KanbanDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assembly Line Manager View" Height="650" Width="1000"
        Background="#111827" FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#374151" BorderThickness="0,0,0,1" Padding="0,0,0,20" Margin="0,0,0,20">
            <Grid>
                <StackPanel>
                    <TextBlock Text="ASSEMBLY LINE KANBAN" Foreground="#9CA3AF" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding OrderTitle}" Foreground="White" FontSize="36" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="txtStatus" Text="● SYSTEM ONLINE" Foreground="#10B981" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="txtLastUpdated" Text="Last Updated: 12:00:00" Foreground="Gray" FontSize="12" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1F2937" CornerRadius="10" Margin="0,0,10,0" Padding="30">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="PRODUCTION GOAL" Foreground="#9CA3AF" FontSize="14" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <TextBlock Text="{Binding Completed}" Foreground="White" FontSize="72" FontWeight="Bold"/>
                        <TextBlock Text="/" Foreground="#6B7280" FontSize="40" VerticalAlignment="Bottom" Margin="10,0,10,12"/>
                        <TextBlock Text="{Binding OrderAmount}" Foreground="#6B7280" FontSize="40" VerticalAlignment="Bottom" Margin="0,0,0,12"/>
                    </StackPanel>
                    <Grid Margin="0,20,0,0">
                        <ProgressBar Height="20" Value="{Binding ProgressBarValue, Mode=OneWay}" Maximum="100" Background="#374151" Foreground="#3B82F6" BorderThickness="0"/>
                        <TextBlock Text="{Binding ProgressText}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Bold" Foreground="White" Margin="0,-2,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="#1F2937" CornerRadius="10" Margin="10,0" Padding="20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="QUALITY YIELD" Foreground="#9CA3AF" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Text="{Binding YieldText}" Foreground="{Binding YieldColor}" FontSize="48" FontWeight="Bold" Margin="0,20"/>
                    <Border Background="#374151" CornerRadius="15" Padding="15,5">
                        <TextBlock Text="TARGET: >98%" Foreground="#9CA3AF" FontSize="12" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="#1F2937" CornerRadius="10" Margin="10,0,0,0" Padding="20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="WORK IN PROCESS" Foreground="#9CA3AF" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Text="{Binding InProcess}" Foreground="#F59E0B" FontSize="60" FontWeight="Bold" Margin="0,15"/>
                    <TextBlock Text="Units Active" Foreground="#6B7280" FontSize="12"/>
                </StackPanel>
            </Border>
        </Grid>

        <TextBlock Grid.Row="2" Text="ACTIVE WORKFORCE &amp; STATION STATUS" Foreground="#6B7280" FontSize="14" FontWeight="Bold" Margin="0,30,0,10"/>

        <ItemsControl Grid.Row="3" ItemsSource="{Binding Stations}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#1F2937" CornerRadius="8" Margin="0,0,10,0" Padding="20"
                            BorderBrush="{Binding BorderColor}" BorderThickness="{Binding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <TextBlock Text="{Binding StationName}" Foreground="#9CA3AF" FontSize="12" FontWeight="Bold"/>
                                <TextBlock Text="{Binding ActivityText}" Foreground="{Binding ActivityColor}" FontSize="10" FontWeight="Bold" HorizontalAlignment="Right"/>
                            </Grid>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15">
                                <TextBlock Text="👤" Foreground="{Binding WorkerColor}" FontSize="18" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding WorkerText}" Foreground="{Binding WorkerColor}" FontSize="16" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <Border Grid.Row="2" Background="{Binding StockBgColor}" VerticalAlignment="Bottom" HorizontalAlignment="Left" CornerRadius="4" Padding="10,5">
                                <TextBlock Text="{Binding StockText}" Foreground="White" FontSize="11" FontWeight="Bold"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
        </StackPanel>
    </Grid>
</Window>